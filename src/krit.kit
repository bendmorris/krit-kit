import krit.*;
import krit.backend.app;
import krit.scale.*;

typedef Krit = App;

/**
 * Project option builder.
 */
struct KritOptions {
    public var title: CString = "Krit";
    public var width: Int = 320;
    public var height: Int = 240;
    public var fps: Int = 60;
    public var fixedFrameRate: Bool = true;

    public function setSize(x: Int, y: Int) {
        this.width = x;
        this.height = y;
        return &this;
    }

    public function setTitle(t: CString) {
        this.title = t;
        return &this;
    }

    public function setFrameRate(f: Int, fixed: Bool) {
        this.fps = f;
        this.fixedFrameRate = fixed;
        return &this;
    }
}
