struct Camera {
    public var position: Point = Point.new(0, 0);
    public var dimensions: Dimensions = Dimensions.new(0, 0);
    public var scale: ScaleFactor = ScaleFactor.new();
    public var pixelSnapping: Bool = false;

    public static function new() {
        return struct Camera {};
    }

    rules {
        ($this.x) => $this.point.x;
        ($this.y) => $this.point.y;
        ($this.width) => $this.dimensions.x;
        ($this.height) => $this.dimensions.y;
    }
}
