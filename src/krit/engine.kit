struct Engine {
    public static function new(screen: Ptr[Screen]): Engine {
        return struct Engine {screen};
    }

    public var paused: Bool = false;
    public var screen: Ptr[Screen];

    public function update() {
        if this.paused {
            return;
        }
    }

    rules {
